DOCUMENT();

loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
#           "PGstandard.pl",
#           "extraAnswerEvaluators.pl",
           "PGauxiliaryFunctions.pl",
#           "PGgraphmacros.pl",
           "MathObjects.pl",
#           "PGchoicemacros.pl",
          # "parserNumberWithUnits.pl",
          # "parserFormulaWithUnits.pl",
          # "parserFormulaUpToConstant.pl",
          # "PGcourse.pl",
"parserVectorUtils.pl",
"AnswerFormatHelp.pl",
"PGcourse.pl",
          );


TEXT(beginproblem());

Context("Numeric");

$showPartialCorrectAnswers = 1;

$angle = random(1,89,1);
$sin = round(sin($angle*pi/180)*1000)/1000;
$cos= round(cos($angle*pi/180)*1000)/1000;
$tan= round(tan($angle*pi/180)*1000)/1000;
$sec= round(sec($angle*pi/180)*1000)/1000;
$csc= round(csc($angle*pi/180)*1000)/1000;
$cot= round(cot($angle*pi/180)*1000)/1000;

Context()->functions->disable("Trig");

Context()->texStrings;
BEGIN_TEXT
Use a calculator to find the values of the trigonometric functions below. Round your answers to three decimal places.
$PAR
\( \sin($angle^\circ) \) = \{ ans_rule(20) \}
$PAR
\( \cos($angle^\circ) \) = \{ ans_rule(20) \}
$PAR
\( \tan($angle^\circ) \) = \{ ans_rule(20) \}
$PAR
\( \sec($angle^\circ) \) = \{ ans_rule(20) \}
$PAR
\( \csc($angle^\circ) \) = \{ ans_rule(20) \}
$PAR
\( \cot($angle^\circ) \) = \{ ans_rule(20) \}

END_TEXT
Context()->normalStrings;

ANS(num_cmp($sin,tol=>0.001,tolType=>"absolute") );
ANS(num_cmp($cos,tol=>0.001,tolType=>"absolute") );
ANS(num_cmp($tan,tol=>0.001,tolType=>"absolute") );
ANS(num_cmp($sec,tol=>0.001,tolType=>"absolute") );
ANS(num_cmp($csc,tol=>0.001,tolType=>"absolute") );
ANS(num_cmp($cot,tol=>0.001,tolType=>"absolute") );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));

END_SOLUTION
Context()->normalStrings;


COMMENT('MathObject version');
ENDDOCUMENT();