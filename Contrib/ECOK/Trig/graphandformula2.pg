DOCUMENT();      


loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "parserVectorUtils.pl",
           "AnswerFormatHelp.pl",      
           "PGstandard.pl",     # Standard macros for PG language
           "MathObjects.pl", 
           "PGgraphmacros.pl",
          "parserPopUp.pl",
);


# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;
$refreshCachedImages=1;

##############################################################
#
#  Setup
#
#

$c = random(-3,-1,1);
$d=random(2,8,1);
 $gr3 = init_graph(-9,$c-1,9,-$c+1,axes=>[0,0],grid=>[18,-2*$c+2]);
  add_functions($gr3,
  "$c*sin(2*pi*x/$d) for x in <-9,9> using color:black and weight:2");

$func = Compute("$c*sin(2*pi*x/$d)");

Context("Numeric");


##############################################################
#
#  Text
#
#

Context()->texStrings;
  BEGIN_TEXT
  \{ image( insertGraph($gr3), tex_size=>250 ) \}
  $BR
The trig function graphed above can be expanded by clicking on it.  The function graphed goes through the points \( \left(0,0\right)\) and \(\left(\frac{$d}4,$c\right)\) is
$BR
 \(y=\) \{ ans_rule(35) \}.



  END_TEXT

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $func->cmp() );

ENDDOCUMENT();     
