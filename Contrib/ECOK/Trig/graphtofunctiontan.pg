########################################################################

DOCUMENT();      


loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "PGauxiliaryFunctions.pl",
           "parserVectorUtils.pl",
           "AnswerFormatHelp.pl",      
           "PGstandard.pl",     # Standard macros for PG language
           "MathObjects.pl", 
           "PGgraphmacros.pl",
          "parserPopUp.pl",
);


# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;
$refreshCachedImages=1;

##############################################################
#
#  Setup
#
#

$c = random(3,7,1);
$d=random(4,10,2);
$e = random(2,4,1);
$f = random(-3,-1,1);
 $gr3 = init_graph(-$d,-$c-1+$f,$d,$c+1+$f,axes=>[0,0],grid=>[2*$d,2*$c+2]);
  add_functions($gr3,
  "$c*tan(pi/$d*(x-$e))+$f for x in <-$d,$d> using color:black and weight:2");

$func = Compute("$c*tan(pi/$d*(x-$e))+$f");

$p=-$d/2+$e;
$e1=$e-$d;
$q=$d/4+$e1;

$fe=$func->eval(x=>$e1);
$fq=$func->eval(x=>$q);

Context("Numeric");


##############################################################
#
#  Text
#
#

Context()->texStrings;
  BEGIN_TEXT
  \{ image( insertGraph($gr3), tex_size=>250 ) \}
  $BR
The trig function graphed above can be expanded by clicking on it.  The function graphed has an asymptote at \(x=$p\) and goes through the points \( \left($e1,$fe\right)\) and \( \left($q,$fq\right)\) is
$BR
 \{ ans_rule(35) \}



  END_TEXT

Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS( $func->cmp() );

ENDDOCUMENT();     